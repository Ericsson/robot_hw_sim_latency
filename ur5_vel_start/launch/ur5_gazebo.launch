<?xml version="1.0"?>
<launch>
  <arg name="paused" default="false"/>
  <arg name="gui" default="true"/>
  <arg name="moveit" default="false"/>
  
  <!-- startup simulated world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" default="worlds/empty.world"/>
    <arg name="paused" value="true"/>
    <arg name="gui" value="$(arg gui)"/>
  </include>

  <!-- send robot urdf to param server -->
  <param name="robot_description" command="$(find xacro)/xacro --inorder '$(find ur5_vel_start)/urdf/ur5_robot.urdf.xacro'" />

  <rosparam file="$(find ur5_vel_start)/config/gazebo_config.yaml" command="load"/>


  <!-- push robot_description to factory and spawn robot in gazebo -->
  <node name="spawn_gazebo_model" pkg="gazebo_ros" type="spawn_model" args="-urdf -param robot_description -model robot
  -J elbow_joint 1.3498
  -J shoulder_lift_joint -1.3537
  -J shoulder_pan_joint -0.0353
  -J wrist_1_joint -0.0353
  -J wrist_2_joint 0
  -J wrist_3_joint 0
  -J robotiq_85_left_knuckle_joint 0"
   respawn="false" output="screen" />

  <include file="$(find ur_gazebo)/launch/controller_utils.launch"/>

  <rosparam file="$(find ur5_vel_start)/config/ur5_controllers_sim.yaml" command="load"/>
  <!--<node name="ur5_velocity_controller_spawner" pkg="controller_manager" type="spawner" args="ur5_velocity_controller" />-->
   <!--<remap if="$(arg moveit)" from="/follow_joint_trajectory" to="/ur5_velocity_controller_moveit/follow_joint_trajectory"/>-->
  <node unless="$(arg moveit)" name="ur5_velocity_controller_spawner" pkg="controller_manager" type="spawner" args="ur5_velocity_controller"/>
  <node if="$(arg moveit)" name="ur5_velocity_controller_spawner" pkg="controller_manager" type="spawner" args="ur5_velocity_controller_moveit"/>

  <include if="$(arg moveit)" file="$(find ur5_moveit_vel_control_config)/launch/ur5_moveit_planning_execution.launch"/>

  <!-- Unpause after the controller started to prevent collapse of arm-->
  <group unless="$(arg moveit)">
    <node unless="$(arg paused)" name="gazebounpauser" pkg="ur5_vel_start" type="waitandunpause.py" output="screen" />
  </group>
</launch>
